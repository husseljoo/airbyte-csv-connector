{
  "documentationUrl": "https://docs.airbyte.com/integrations/destinations/orange-hdfs",
  "supported_destination_sync_modes": ["overwrite", "append", "append_dedup"],
  "supportsIncremental": true,
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Destination Orange Hdfs",
    "type": "object",
    "required": ["servers", "hdfs_path", "parallelism"],
    "additionalProperties": false,
    "properties": {
      "hdfs_path": {
        "type": "string",
        "description": "The path in which the data will be saved in hdfs."
      },
      "parallelism": {
        "type": "integer",
        "default": 1,
        "description": "Number of concurrent connections."
      },
      "servers": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "host": {
              "type": "string",
              "description": "The host of the server"
            },
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          },
          "required": ["host", "port", "username", "password"]
        },
        "description": "A list of servers that are part of the HDFS cluster. These servers will be used as intermediate locations to files from the sources and copyFromLocal to HDFS and clean up the local filesystem after."
      }
    }
  }
}
